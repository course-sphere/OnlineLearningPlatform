@model List<Domain.Entities.Course>
    @{ ViewData["Title"] = "Instructor Dashboard"; }

    <div class="container mx-auto px-6 py-8">
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-3xl font-bold text-slate-900">Instructor Dashboard</h1>

            <a asp-action="Create" class="bg-slate-900 hover:bg-slate-800 text-white px-5 py-2.5 rounded-lg shadow-lg flex items-center gap-2 transition-all">
                <i class="fas fa-plus"></i> Create New Course
            </a>
        </div>

        @if (!Model.Any())
    {
        <div class="text-center py-20 bg-slate-50 rounded-xl border border-dashed border-slate-300">
            <div class="text-slate-400 text-5xl mb-4"><i class="fas fa-folder-open"></i></div>
            <h3 class="text-lg font-medium text-slate-900">You haven't created any courses yet.</h3>
            <p class="text-slate-500 mb-6">Start sharing your knowledge today!</p>
            <a asp-action="Create" class="text-cyan-600 font-medium hover:underline">Create your first course &rarr;</a>
        </div>
    }
    else
    {
        <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
            <table class="w-full text-left">
                <thead class="bg-slate-50 border-b border-slate-200">
                    <tr>
                        <th class="p-4 font-semibold text-slate-600 text-sm">Course</th>
                        <th class="p-4 font-semibold text-slate-600 text-sm">Status</th>
                        <th class="p-4 font-semibold text-slate-600 text-sm">Price</th>
                        <th class="p-4 font-semibold text-slate-600 text-sm">Students</th>
                        <th class="p-4 font-semibold text-slate-600 text-sm text-right">Action</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    @foreach (var course in Model)
                    {
                    <tr class="hover:bg-slate-50 transition-colors">
                        <td class="p-4">
                            <div class="font-bold text-slate-900">@course.Title</div>
                            <div class="text-xs text-slate-500 mt-1">Created: @course.CreatedAt.ToString("MMM dd, yyyy")</div>
                        </td>
                        <td class="p-4">
                            @if (course.Status == Domain.Entities.CourseStatus.Published)
                                {
                            <span class="px-2.5 py-0.5 bg-emerald-100 text-emerald-700 text-xs font-bold rounded-full border border-emerald-200">Published</span>
                                }
                                else if (course.Status == Domain.Entities.CourseStatus.Draft)
                                {
                            <span class="px-2.5 py-0.5 bg-slate-100 text-slate-600 text-xs font-bold rounded-full border border-slate-200">Draft</span>
                                }
                                else
                                {
                            <span class="px-2.5 py-0.5 bg-amber-100 text-amber-700 text-xs font-bold rounded-full border border-amber-200">Pending</span>
                                }
                        </td>
                        <td class="p-4 text-sm font-medium">@(course.Price == 0 ? "Free" : course.Price.ToString("C0"))</td>
                        <td class="p-4 text-sm">@(course.Enrollments?.Count ?? 0)</td>
                        <td class="p-4 text-right">
                            <a asp-action="Edit" asp-route-id="@course.CourseId" class="text-sm font-medium text-cyan-600 hover:text-cyan-800 hover:underline">
                                Edit <i class="fas fa-pen ml-1"></i>
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    </div>

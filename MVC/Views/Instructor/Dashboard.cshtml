@model List<Domain.Entities.Course>
    @{ ViewData["Title"] = "Instructor Dashboard"; }

    <div class="container mx-auto px-6 py-8">
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-3xl font-bold">Instructor Dashboard</h1>
            <a href="#" class="bg-zinc-900 text-white px-4 py-2 rounded-lg">+ Create New Course</a>
        </div>

        <div class="bg-white rounded-xl shadow border overflow-hidden">
            <table class="w-full text-left">
                <thead class="bg-gray-50 border-b">
                    <tr>
                        <th class="p-4 font-medium text-gray-500">Course</th>
                        <th class="p-4 font-medium text-gray-500">Status</th>
                        <th class="p-4 font-medium text-gray-500">Price</th>
                        <th class="p-4 font-medium text-gray-500">Students</th>
                        <th class="p-4 font-medium text-gray-500">Action</th>
                    </tr>
                </thead>
                <tbody class="divide-y">
                    @foreach (var course in Model)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="p-4">
                            <div class="font-bold">@course.Title</div>
                            <div class="text-xs text-gray-400">Created: @course.CreatedAt.ToString("d")</div>
                        </td>
                        <td class="p-4">
                            @if(course.Status == Domain.Entities.CourseStatus.Published) {
                            <span class="px-2 py-1 bg-green-100 text-green-800 text-xs rounded-full">Published</span>
                            } else if (course.Status == Domain.Entities.CourseStatus.Draft) {
                            <span class="px-2 py-1 bg-gray-100 text-gray-800 text-xs rounded-full">Draft</span>
                            } else {
                            <span class="px-2 py-1 bg-yellow-100 text-yellow-800 text-xs rounded-full">Pending</span>
                            }
                        </td>
                        <td class="p-4">@course.Price</td>
                        <td class="p-4">@(course.Enrollments?.Count ?? 0)</td>
                        <td class="p-4">
                            <a href="#" class="text-cyan-600 hover:underline">Edit</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>

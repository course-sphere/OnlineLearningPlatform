@using Domain.Entities
@model GradedItem
@{
    ViewData["Title"] = "Edit Quiz Content";
    // Cấu hình JSON để không bị lỗi Reference Loop ở View
    var options = new System.Text.Json.JsonSerializerOptions
    {
        PropertyNamingPolicy = System.Text.Json.JsonNamingPolicy.CamelCase,
        ReferenceHandler = System.Text.Json.Serialization.ReferenceHandler.IgnoreCycles
    };
    var questionsJson = System.Text.Json.JsonSerializer.Serialize(Model.Questions, options);
}

<div class="min-h-screen bg-slate-50 pb-20"
     x-data="quizEditor('@Model.GradedItemId', @questionsJson)">

    <div class="bg-white border-b border-slate-200 sticky top-0 z-30 shadow-sm">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center gap-4">
                    <a href="/Instructor/Edit/@ViewBag.CourseId" class="text-slate-400 hover:text-slate-600 transition-colors">
                        <i class="fas fa-arrow-left"></i> Back
                    </a>
                    <div class="h-6 w-px bg-slate-200"></div>
                    <div>
                        <h1 class="text-lg font-bold text-slate-900 line-clamp-1">@ViewBag.LessonTitle</h1>
                        <p class="text-xs text-slate-500">Quiz Editor &bull; @ViewBag.CourseTitle</p>
                    </div>
                </div>
                <button @@click="openModal()" class="px-4 py-2 bg-primary-600 text-white rounded-lg text-sm font-medium hover:bg-primary-700 shadow-sm flex items-center gap-2">
                    <i class="fas fa-plus-circle"></i> Add Question
                </button>
            </div>
        </div>
    </div>

    <div class="max-w-4xl mx-auto py-8 px-4">

        <div x-show="questions.length === 0" class="text-center py-16 border-2 border-dashed border-slate-300 rounded-xl bg-white" x-cloak>
            <div class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-4 text-slate-400">
                <i class="fas fa-question text-2xl"></i>
            </div>
            <h3 class="text-lg font-medium text-slate-900">No questions yet</h3>
            <p class="text-slate-500 mb-6">Start building your quiz by adding a question.</p>
            <button @@click="openModal()" class="px-4 py-2 bg-white border border-slate-300 text-slate-700 font-medium rounded-lg hover:bg-slate-50">
                Create Question
            </button>
        </div>

        <div class="space-y-6">
            <template x-for="(q, index) in questions" :key="index">
                <div class="bg-white border border-slate-200 rounded-xl shadow-sm overflow-hidden">
                    <div class="p-5 border-b border-slate-100 flex justify-between items-start bg-slate-50/50">
                        <div class="flex gap-4">
                            <span class="flex-shrink-0 w-8 h-8 bg-slate-900 text-white rounded-lg flex items-center justify-center font-bold text-sm" x-text="index + 1"></span>
                            <div>
                                <h3 class="font-bold text-slate-800 text-lg" x-text="q.content"></h3>
                                <div class="flex gap-3 mt-1 text-xs text-slate-500">
                                    <span class="bg-slate-100 px-2 py-0.5 rounded border border-slate-200" x-text="getTypeName(q.type)"></span>
                                    <span>&bull;</span>
                                    <span x-text="`${q.points} Points`"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="p-5 bg-white">
                        <ul class="space-y-2">
                            <template x-for="opt in q.answerOptions">
                                <li class="flex items-center gap-3 text-sm">
                                    <div class="w-5 h-5 rounded-full border flex items-center justify-center"
                                         :class="opt.isCorrect ? 'border-emerald-500 bg-emerald-50 text-emerald-600' : 'border-slate-300 text-transparent'">
                                        <i class="fas fa-check text-xs" x-show="opt.isCorrect"></i>
                                    </div>
                                    <span :class="opt.isCorrect ? 'font-medium text-emerald-700' : 'text-slate-600'" x-text="opt.text"></span>
                                </li>
                            </template>
                        </ul>
                        <div x-show="q.explanation" class="mt-4 p-3 bg-blue-50 text-blue-800 text-sm rounded-lg border border-blue-100">
                            <i class="fas fa-info-circle mr-1"></i> <span class="font-medium">Explanation:</span> <span x-text="q.explanation"></span>
                        </div>
                    </div>
                </div>
            </template>
        </div>
    </div>

    <div x-show="showModal" class="fixed inset-0 z-50 flex items-center justify-center bg-black/50 backdrop-blur-sm p-4" x-cloak>
        <div class="bg-white rounded-xl shadow-2xl w-full max-w-2xl max-h-[90vh] overflow-y-auto" @@click.away="closeModal()">
            <div class="p-6 border-b border-slate-100 flex justify-between items-center sticky top-0 bg-white z-10">
                <h3 class="text-xl font-bold text-slate-900">Add Question</h3>
                <button @@click="closeModal()" class="text-slate-400 hover:text-slate-600"><i class="fas fa-times text-xl"></i></button>
            </div>

            <div class="p-6 space-y-6">
                <div class="grid grid-cols-12 gap-6">
                    <div class="col-span-12">
                        <label class="block text-sm font-medium text-slate-700 mb-1">Question Text</label>
                        <textarea x-model="formData.content" class="w-full rounded-lg border border-slate-300 focus:ring-primary-500 focus:border-primary-500" rows="3" placeholder="Enter question content..."></textarea>
                    </div>
                    <div class="col-span-6">
                        <label class="block text-sm font-medium text-slate-700 mb-1">Type</label>
                        <select x-model.number="formData.type" class="w-full rounded-lg border border-slate-300">
                            <option value="0">Multiple Choice</option>
                            <option value="1">True/False</option>
                        </select>
                    </div>
                    <div class="col-span-6">
                        <label class="block text-sm font-medium text-slate-700 mb-1">Points</label>
                        <input type="number" x-model.number="formData.points" class="w-full rounded-lg border border-slate-300">
                    </div>
                </div>

                <hr class="border-slate-100" />

                <div>
                    <div class="flex justify-between items-center mb-3">
                        <label class="block text-sm font-bold text-slate-900">Answer Options</label>
                        <button @@click="addAnswerOption()" class="text-xs text-primary-600 font-medium hover:underline">+ Add Option</button>
                    </div>

                    <div class="space-y-3">
                        <template x-for="(opt, idx) in formData.answerOptions" :key="idx">
                            <div class="flex items-center gap-3">
                                <input type="radio" name="correctAnswer"
                                       class="w-5 h-5 text-emerald-600 border-slate-300 focus:ring-emerald-500 cursor-pointer"
                                       :checked="opt.isCorrect"
                                       @@change="setCorrectAnswer(idx)">

                                <input type="text" x-model="opt.text"
                                       class="flex-1 rounded-lg border border-slate-300 text-sm focus:border-primary-500 focus:ring-primary-500"
                                       :placeholder="`Option ${idx + 1}`">

                                <button @@click="removeAnswerOption(idx)" class="text-slate-400 hover:text-rose-500 p-2" x-show="formData.answerOptions.length > 2">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </template>
                    </div>
                    <p class="text-xs text-slate-400 mt-2 italic">* Select the radio button to mark the correct answer.</p>
                </div>

                <hr class="border-slate-100" />

                <div class="col-span-12">
                    <label class="block text-sm font-medium text-slate-700 mb-1">Explanation (Optional)</label>
                    <textarea x-model="formData.explanation" class="w-full rounded-lg border border-slate-300 text-sm" rows="2" placeholder="Why is this answer correct?"></textarea>
                </div>
            </div>

            <div class="p-6 border-t border-slate-100 bg-slate-50 rounded-b-xl flex justify-end gap-3">
                <button @@click="closeModal()" class="px-5 py-2.5 text-slate-600 font-medium hover:bg-white rounded-lg border border-transparent hover:border-slate-200 transition-all">Cancel</button>
                <button @@click="saveQuestion()" class="px-5 py-2.5 bg-slate-900 text-white font-medium rounded-lg hover:bg-slate-800 shadow-lg shadow-slate-900/20 transition-all flex items-center gap-2" :disabled="isSaving">
                    <span x-show="!isSaving">Save Question</span>
                    <span x-show="isSaving"><i class="fas fa-spinner fa-spin"></i> Saving...</span>
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    function quizEditor(gradedItemId, initialQuestions) {
        return {
            gradedItemId: gradedItemId,
            questions: initialQuestions || [],
            showModal: false,
            isSaving: false,
            // Form Data mặc định
            formData: {
                content: '',
                type: 0,
                points: 10,
                explanation: '',
                answerOptions: []
            },

            getTypeName(type) {
                if (type === 0) return 'Multiple Choice';
                if (type === 1) return 'True/False';
                return 'Short Answer';
            },

            openModal() {
                // Reset form mỗi khi mở
                this.formData = {
                    content: '',
                    type: 0,
                    points: 10,
                    explanation: '',
                    answerOptions: [
                        { text: '', isCorrect: true },
                        { text: '', isCorrect: false },
                        { text: '', isCorrect: false },
                        { text: '', isCorrect: false }
                    ]
                };
                this.showModal = true;
            },

            closeModal() {
                this.showModal = false;
            },

            addAnswerOption() {
                this.formData.answerOptions.push({ text: '', isCorrect: false });
            },

            removeAnswerOption(index) {
                this.formData.answerOptions.splice(index, 1);
            },

            setCorrectAnswer(index) {
                this.formData.answerOptions.forEach((opt, i) => {
                    opt.isCorrect = (i === index);
                });
            },

            async saveQuestion() {
                if (!this.formData.content) {
                    window.dispatchEvent(new CustomEvent('notify', { detail: { message: 'Please enter question text!', type: 'error' } }));
                    return;
                }

                // Lọc bỏ đáp án rỗng
                const validOptions = this.formData.answerOptions.filter(o => o.text && o.text.trim() !== '');
                if (validOptions.length < 2) {
                    window.dispatchEvent(new CustomEvent('notify', { detail: { message: 'At least 2 options required!', type: 'error' } }));
                    return;
                }

                const payload = {
                    gradedItemId: this.gradedItemId,
                    content: this.formData.content,
                    type: this.formData.type,
                    points: this.formData.points,
                    explanation: this.formData.explanation,
                    answerOptions: validOptions
                };

                this.isSaving = true;

                try {
                    const res = await fetch('/Instructor/CreateQuestion', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    const data = await res.json();

                    if (res.ok) {
                        this.questions.push(data.result);
                        this.closeModal();
                        window.dispatchEvent(new CustomEvent('notify', { detail: { message: 'Question saved successfully!', type: 'success' } }));
                    } else {
                        window.dispatchEvent(new CustomEvent('notify', { detail: { message: data.message || 'Error saving question', type: 'error' } }));
                    }
                } catch (error) {
                    console.error(error);
                    window.dispatchEvent(new CustomEvent('notify', { detail: { message: 'System error', type: 'error' } }));
                } finally {
                    this.isSaving = false;
                }
            }
        }
    }
</script>
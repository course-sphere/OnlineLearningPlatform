@model MVC.Models.PaymentCheckoutViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Xác nhận thanh toán</h4>
                </div>
                <div class="card-body text-center">
                    <img src="https://sandbox.vnpayment.vn/paymentv2/images/graph/vnpay-logo.png" width="150" class="mb-4" />
                    <h5>Bạn đang thực hiện thanh toán cho khóa học</h5>
                    <p class="text-muted">ID: @Model.CourseId</p>

                    <div class="alert alert-info">
                        <strong>Số tiền cần thanh toán:</strong>
                        <span class="fs-4 text-danger">500.000 VND</span> @* Bạn có thể lấy giá từ DB *@
                    </div>

                    <form asp-action="Checkout" method="post">
                        <input type="hidden" asp-for="CourseId" />
                        <button type="submit" class="btn btn-success btn-lg w-100">
                            Thanh toán qua VNPay
                        </button>
                    </form>
                    <a asp-controller="Course" asp-action="Detail" asp-route-id="@Model.CourseId" class="btn btn-link mt-3 text-secondary">Quay lại</a>
                </div>
            </div>
        </div>
    </div>
</div>
@{
    ViewData["Title"] = "Payment Failed";
}

<div class="min-h-[80vh] flex items-center justify-center bg-slate-50 px-4">
    <div class="max-w-md w-full bg-white rounded-3xl shadow-xl overflow-hidden text-center p-8 border border-slate-100">
        <div class="w-20 h-20 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <i class="fas fa-times text-4xl text-red-600"></i>
        </div>

        <h1 class="text-3xl font-bold text-slate-900 mb-2">Payment Failed</h1>
        <p class="text-slate-600 mb-8">
            Oops! Something went wrong with the transaction. Please try again or contact support.
        </p>

        <div class="space-y-3">
            <a href="javascript:history.back()" class="block w-full bg-slate-900 text-white py-3.5 rounded-xl font-semibold hover:bg-slate-800 transition-colors">
                Try Again
            </a>
            <a asp-controller="Home" asp-action="Index" class="block w-full bg-white border border-slate-200 text-slate-700 py-3.5 rounded-xl font-semibold hover:bg-slate-50 transition-colors">
                Cancel
            </a>
        </div>
    </div>
</div>
@{
    ViewData["Title"] = "Payment Successful";
}

<div class="min-h-[80vh] flex items-center justify-center bg-slate-50 px-4">
    <div class="max-w-md w-full bg-white rounded-3xl shadow-xl overflow-hidden text-center p-8 border border-slate-100">
        <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <i class="fas fa-check text-4xl text-green-600"></i>
        </div>

        <h1 class="text-3xl font-bold text-slate-900 mb-2">Payment Successful!</h1>
        <p class="text-slate-600 mb-8">
            Thank you for your purchase. You have been successfully enrolled in the course.
        </p>

        <div class="space-y-3">
            <a asp-controller="Student" asp-action="MyCourses" class="block w-full bg-primary-600 text-white py-3.5 rounded-xl font-semibold hover:bg-primary-700 transition-colors">
                Start Learning Now
            </a>
            <a asp-controller="Home" asp-action="Index" class="block w-full bg-white border border-slate-200 text-slate-700 py-3.5 rounded-xl font-semibold hover:bg-slate-50 transition-colors">
                Back to Home
            </a>
        </div>
    </div>
</div>
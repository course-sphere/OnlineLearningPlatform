@model MVC.Models.Dashboard.DashboardViewModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Dashboard";
}

<!-- Dashboard Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Total Users Card -->
    <div class="bg-white rounded-xl shadow-sm border border-zinc-200 p-6 hover:shadow-md transition-shadow duration-300">
        <div class="flex items-center justify-between mb-4">
            <div>
                <p class="text-xs font-semibold text-zinc-500 uppercase tracking-wider">Total Users</p>
            </div>
            <div class="w-12 h-12 bg-indigo-100 rounded-xl flex items-center justify-center">
                <i class="fas fa-users text-indigo-600 text-xl"></i>
            </div>
        </div>
        <div class="text-3xl font-bold text-zinc-900 mb-2">
            @Model.TotalUsers
        </div>
        <div class="flex items-center text-sm text-emerald-600">
            <i class="fas fa-arrow-up mr-1"></i>
            @* <span>+12% from last month</span> *@
        </div>
    </div>

    <!-- Total Revenue Card -->
    <div class="bg-white rounded-xl shadow-sm border border-zinc-200 p-6 hover:shadow-md transition-shadow duration-300">
        <div class="flex items-center justify-between mb-4">
            <div>
                <p class="text-xs font-semibold text-zinc-500 uppercase tracking-wider">Total Revenue</p>
            </div>
            <div class="w-12 h-12 bg-emerald-100 rounded-xl flex items-center justify-center">
                <i class="fas fa-dollar-sign text-emerald-600 text-xl"></i>
            </div>
        </div>
        <div class="text-3xl font-bold text-zinc-900 mb-2">
            @Model.TotalRevenue.ToString("C")
        </div>
        <div class="flex items-center text-sm text-emerald-600">
            <i class="fas fa-arrow-up mr-1"></i>
            @* <span>+8% from last month</span> *@
        </div>
    </div>

    <!-- Active Courses Card -->
    <div class="bg-white rounded-xl shadow-sm border border-zinc-200 p-6 hover:shadow-md transition-shadow duration-300">
        <div class="flex items-center justify-between mb-4">
            <div>
                <p class="text-xs font-semibold text-zinc-500 uppercase tracking-wider">Active Courses</p>
            </div>
            <div class="w-12 h-12 bg-amber-100 rounded-xl flex items-center justify-center">
                <i class="fas fa-book-open text-amber-600 text-xl"></i>
            </div>
        </div>
        <div class="text-3xl font-bold text-zinc-900 mb-2">
            @Model.ActiveCourses
        </div>
        <div class="flex items-center text-sm text-emerald-600">
            <i class="fas fa-arrow-up mr-1"></i>
            @* <span>+3 new courses</span> *@
        </div>
    </div>

    <!-- Enrollments Card -->
    <div class="bg-white rounded-xl shadow-sm border border-zinc-200 p-6 hover:shadow-md transition-shadow duration-300">
        <div class="flex items-center justify-between mb-4">
            <div>
                <p class="text-xs font-semibold text-zinc-500 uppercase tracking-wider">Enrollments</p>
            </div>
            <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center">
                <i class="fas fa-graduation-cap text-blue-600 text-xl"></i>
            </div>
        </div>
        <div class="text-3xl font-bold text-zinc-900 mb-2">
            @Model.TotalEnrollments
        </div>

        <div class="flex items-center text-sm text-red-600">
            <i class="fas fa-arrow-down mr-1"></i>
            @* <span>-2% from last month</span> *@
        </div>
    </div>
</div>

<!-- Recent Activities Table -->
<div class="bg-white rounded-xl shadow-sm border border-zinc-200 overflow-hidden">
    <!-- Table Header -->
    <div class="px-6 py-4 border-b border-zinc-200">
        <div class="flex items-center justify-between">
            <h2 class="text-xl font-semibold text-zinc-900">Recent Course Registrations</h2>
            <div class="flex gap-3">
                <button class="inline-flex items-center gap-2 px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition-colors duration-200">
                    <i class="fas fa-download"></i>
                    Export
                </button>
                <button class="inline-flex items-center gap-2 px-4 py-2 bg-blue-50 text-blue-600 text-sm font-medium rounded-lg hover:bg-blue-600 hover:text-white transition-colors duration-200">
                    <i class="fas fa-filter"></i>
                    Filter
                </button>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-zinc-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-zinc-500 uppercase">Time</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-zinc-500 uppercase">Student</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-zinc-500 uppercase">Course</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-zinc-500 uppercase">Progress</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-zinc-500 uppercase">Status</th>
                </tr>
            </thead>
            @* Data giả *@
            <tbody class="bg-white divide-y divide-zinc-200">
                @if (Model.RecentActivities != null && Model.RecentActivities.Any())
                {
                    foreach (var item in Model.LatestEnrollments)
                    {
                        <tr class="hover:bg-zinc-50 transition-colors">
                            <!-- Time -->
                            <td class="px-6 py-4 text-sm text-zinc-500">
                                @item.EnrolledAt?.ToString("dd/MM/yyyy HH:mm")
                            </td>

                            <!-- Student -->
                            <td class="px-6 py-4 font-semibold text-zinc-900">
                                @item.UserEmail
                            </td>

                            <!-- Course -->
                            <td class="px-6 py-4 text-sm text-zinc-600">
                                @item.CourseName
                            </td>

                            <!-- Progress -->
                            <td class="px-6 py-4">
                                <span class="font-semibold text-indigo-600">
                                    @item.Progress%
                                </span>
                            </td>

                            <!-- Status -->
                            <td class="px-6 py-4">
                                <span class="inline-flex px-3 py-1 rounded-full text-xs font-semibold
                                    @(item.Status == "Active" ? "bg-emerald-100 text-emerald-700"
                                                                                                : item.Status == "PendingPayment" ? "bg-amber-100 text-amber-700"
                                                                                                : item.Status == "Completed" ? "bg-blue-100 text-blue-700"
                                                                                                : "bg-zinc-100 text-zinc-700")">
                            @item.Status
                        </span>
                    </td>
                </tr>
                                }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="px-6 py-8 text-center text-zinc-500">
                            No recent enrollments
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Financial Reports";
}

<div class="dashboard-cards" style="margin-bottom: 30px;">
    <div class="card">
        <div class="card-header">
            <div>
                <div class="card-title">Total Revenue</div>
            </div>
            <div class="card-icon success">
                <i class="fas fa-chart-line"></i>
            </div>
        </div>
        <div class="card-value">$45,231</div>
        <div class="card-change positive">
            <i class="fas fa-arrow-up"></i>
            <span>+18% from last month</span>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <div>
                <div class="card-title">This Month</div>
            </div>
            <div class="card-icon info">
                <i class="fas fa-calendar-month"></i>
            </div>
        </div>
        <div class="card-value">$12,450</div>
        <div class="card-change positive">
            <i class="fas fa-arrow-up"></i>
            <span>+22% from last month</span>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <div>
                <div class="card-title">This Week</div>
            </div>
            <div class="card-icon warning">
                <i class="fas fa-calendar-week"></i>
            </div>
        </div>
        <div class="card-value">$3,200</div>
        <div class="card-change positive">
            <i class="fas fa-arrow-up"></i>
            <span>+5% from last week</span>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <div>
                <div class="card-title">Today</div>
            </div>
            <div class="card-icon primary">
                <i class="fas fa-calendar-day"></i>
            </div>
        </div>
        <div class="card-value">$892</div>
        <div class="card-change positive">
            <i class="fas fa-arrow-up"></i>
            <span>23 transactions</span>
        </div>
    </div>
</div>

<div class="table-container">
    <div class="table-header">
        <h2><i class="fas fa-file-invoice-dollar"></i> Revenue Breakdown</h2>
        <div style="display: flex; gap: 10px;">
            <button class="btn btn-edit">
                <i class="fas fa-calendar"></i> Date Range
            </button>
            <button class="btn btn-primary">
                <i class="fas fa-download"></i> Export PDF
            </button>
        </div>
    </div>

    <table>
        <thead>
            <tr>
                <th>Period</th>
                <th>Enrollments</th>
                <th>Revenue</th>
                <th>Avg. per Course</th>
                <th>Growth</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><strong>January 2024</strong></td>
                <td>187</td>
                <td><strong style="color: var(--success-color);">$12,450</strong></td>
                <td>$66.58</td>
                <td>
                    <div class="card-change positive" style="margin: 0;">
                        <i class="fas fa-arrow-up"></i>
                        <span>+22%</span>
                    </div>
                </td>
                <td><span class="status-badge status-success">On Track</span></td>
            </tr>
            <tr>
                <td><strong>December 2023</strong></td>
                <td>154</td>
                <td><strong style="color: var(--success-color);">$10,200</strong></td>
                <td>$66.23</td>
                <td>
                    <div class="card-change positive" style="margin: 0;">
                        <i class="fas fa-arrow-up"></i>
                        <span>+15%</span>
                    </div>
                </td>
                <td><span class="status-badge status-success">Completed</span></td>
            </tr>
            <tr>
                <td><strong>November 2023</strong></td>
                <td>134</td>
                <td><strong style="color: var(--success-color);">$8,875</strong></td>
                <td>$66.23</td>
                <td>
                    <div class="card-change positive" style="margin: 0;">
                        <i class="fas fa-arrow-up"></i>
                        <span>+8%</span>
                    </div>
                </td>
                <td><span class="status-badge status-success">Completed</span></td>
            </tr>
            <tr>
                <td><strong>October 2023</strong></td>
                <td>124</td>
                <td><strong style="color: var(--success-color);">$8,215</strong></td>
                <td>$66.25</td>
                <td>
                    <div class="card-change positive" style="margin: 0;">
                        <i class="fas fa-arrow-up"></i>
                        <span>+12%</span>
                    </div>
                </td>
                <td><span class="status-badge status-success">Completed</span></td>
            </tr>
            <tr>
                <td><strong>September 2023</strong></td>
                <td>111</td>
                <td><strong style="color: var(--success-color);">$7,340</strong></td>
                <td>$66.13</td>
                <td>
                    <div class="card-change negative" style="margin: 0;">
                        <i class="fas fa-arrow-down"></i>
                        <span>-3%</span>
                    </div>
                </td>
                <td><span class="status-badge status-pending">Review</span></td>
            </tr>
        </tbody>
    </table>
</div>

<div style="margin-top: 30px; display: grid; grid-template-columns: repeat(auto-fit, minmax(350px, 1fr)); gap: 20px;">
    <div class="report-box">
        <h3 style="margin-bottom: 15px; font-size: 20px;">
            <i class="fas fa-trophy"></i> Top Performing Courses
        </h3>
        <p style="margin: 8px 0;">
            <strong>1. Web Development Bootcamp</strong> - <b>$8,500</b>
        </p>
        <p style="margin: 8px 0;">
            <strong>2. Data Science Fundamentals</strong> - <b>$6,240</b>
        </p>
        <p style="margin: 8px 0;">
            <strong>3. UI/UX Design Masterclass</strong> - <b>$4,500</b>
        </p>
    </div>

    <div class="report-box" style="background: linear-gradient(135deg, var(--success-color) 0%, #059669 100%);">
        <h3 style="margin-bottom: 15px; font-size: 20px;">
            <i class="fas fa-chart-pie"></i> Revenue Sources
        </h3>
        <p style="margin: 8px 0;">
            <strong>Course Sales:</strong> <b>78%</b> ($35,280)
        </p>
        <p style="margin: 8px 0;">
            <strong>Subscriptions:</strong> <b>15%</b> ($6,785)
        </p>
        <p style="margin: 8px 0;">
            <strong>Certifications:</strong> <b>7%</b> ($3,166)
        </p>
    </div>
</div>
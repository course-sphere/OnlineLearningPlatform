            <div>
                <p class="text-xs font-semibold text-zinc-500 uppercase tracking-wider">This Week</p>
            </div>
            <div class="w-12 h-12 bg-amber-100 rounded-xl flex items-center justify-center">
                <i class="fas fa-calendar-week text-amber-600 text-xl"></i>
            </div>
        </div>
        <div class="text-3xl font-bold text-zinc-900 mb-2">$3,200</div>
        <div class="flex items-center text-sm text-emerald-600">
            <i class="fas fa-arrow-up mr-1"></i>
            <span>+5% from last week</span>
        </div>
    </div>

    <!-- Today Card -->
    <div class="bg-white rounded-xl shadow-sm border border-zinc-200 p-6 hover:shadow-md transition-shadow duration-300">
        <div class="flex items-center justify-between mb-4">
            <div>
                <p class="text-xs font-semibold text-zinc-500 uppercase tracking-wider">Today</p>
            </div>
            <div class="w-12 h-12 bg-indigo-100 rounded-xl flex items-center justify-center">
                <i class="fas fa-calendar-day text-indigo-600 text-xl"></i>
            </div>
        </div>
        <div class="text-3xl font-bold text-zinc-900 mb-2">$892</div>
        <div class="flex items-center text-sm text-emerald-600">
            <i class="fas fa-arrow-up mr-1"></i>
            <span>23 transactions</span>
        </div>
    </div>
</div>

<!-- Revenue Breakdown Table -->

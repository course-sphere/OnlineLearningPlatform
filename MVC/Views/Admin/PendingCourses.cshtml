@using Domain.Requests.Course
@model List<GetAllCourseForAdminResponse>
    @{
    ViewData["Title"] = "Pending Courses";
    }

    <div class="min-h-screen bg-slate-50 p-8">
        <div class="max-w-7xl mx-auto">

            <div class="flex justify-between items-center mb-8">
                <div>
                    <h1 class="text-2xl font-bold text-slate-900">Course Approval Queue</h1>
                    <p class="text-slate-500">Review and manage courses submitted by instructors.</p>
                </div>
                <span class="bg-blue-100 text-blue-800 text-sm font-medium px-3 py-1 rounded-full">
                    @if(Model != null) { <span>@Model.Count</span> } else { <span>0</span> } pending requests
                </span>
            </div>

            <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="bg-slate-50 text-slate-600 text-sm border-b border-slate-200">
                            <th class="p-4 font-semibold">Course Info</th>
                            <th class="p-4 font-semibold">Statistics</th>
                            <th class="p-4 font-semibold">Price</th>
                            <th class="p-4 font-semibold text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-100">
                        @if (Model != null && Model.Any())
                    {
                        foreach (var course in Model)
                        {
                        <tr class="hover:bg-slate-50 transition-colors group">
                            <td class="p-4">
                                <div class="flex gap-4">
                                    <img src="@(course.Image ?? "https://placehold.co/100x100")"
                                         class="w-20 h-14 object-cover rounded-lg border border-slate-200 shadow-sm">
                                    <div>
                                        <h3 class="font-bold text-slate-900 line-clamp-1">@course.Title</h3>
                                        <p class="text-xs text-slate-500 mt-1 line-clamp-2 max-w-md">@course.Description</p>
                                        <div class="mt-2 flex gap-2">
                                            <span class="text-xs px-2 py-0.5 rounded bg-slate-100 text-slate-600 border border-slate-200">
                                                @course.Level
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="p-4 text-sm text-slate-600">
                                <div class="space-y-1">
                                    <div class="flex items-center gap-2" title="Modules">
                                        <i class="fas fa-folder text-blue-400 w-4"></i> @course.ModuleCount Modules
                                    </div>
                                    <div class="flex items-center gap-2" title="Lessons">
                                        <i class="fas fa-file-alt text-green-400 w-4"></i> @course.LessonCount Lessons
                                    </div>
                                    <div class="flex items-center gap-2" title="Videos">
                                        <i class="fas fa-video text-red-400 w-4"></i> @course.VideoCount Videos
                                    </div>
                                </div>
                            </td>
                            <td class="p-4 font-bold text-slate-900">
                                @if(course.Price == 0) { <span class="text-green-600">Free</span> }
                                    else { <span>$@course.Price.ToString("N2")</span> }
                            </td>
                            <td class="p-4 text-right">
                                <div class="flex justify-end gap-2" x-data="{ showReject: false }">

                                    <form asp-action="Approve" method="post" class="inline">
                                        <input type="hidden" name="courseId" value="@course.CourseId" />
                                        <button type="submit" onclick="return confirm('Approve this course for public?')"
                                                class="px-3 py-2 bg-emerald-600 text-white rounded-lg text-sm font-medium hover:bg-emerald-700 shadow-sm transition-all">
                                            <i class="fas fa-check mr-1"></i> Approve
                                        </button>
                                    </form>

                                    <button @@click="showReject = true" type="button"
                                            class="px-3 py-2 bg-white border border-rose-200 text-rose-600 rounded-lg text-sm font-medium hover:bg-rose-50 transition-all">
                                        <i class="fas fa-times mr-1"></i> Reject
                                    </button>

                                    <div x-show="showReject" class="fixed inset-0 z-50 flex items-center justify-center bg-black/50 backdrop-blur-sm" x-cloak>
                                        <div class="bg-white rounded-xl shadow-2xl p-6 w-full max-w-md text-left" @@click.away="showReject = false">
                                            <h3 class="text-lg font-bold text-slate-900 mb-2">Reject Course?</h3>
                                            <p class="text-sm text-slate-500 mb-4">Please provide a reason so the instructor can improve.</p>

                                            <form asp-action="Reject" method="post">
                                                <input type="hidden" name="courseId" value="@course.CourseId" />
                                                <textarea name="rejectReason" required class="w-full rounded-lg border-slate-300 mb-4 text-sm focus:ring-rose-500 focus:border-rose-500" rows="3" placeholder="Reason for rejection..."></textarea>

                                                <div class="flex justify-end gap-3">
                                                    <button type="button" @@click="showReject = false" class="px-4 py-2 text-slate-600 hover:bg-slate-100 rounded-lg text-sm">Cancel</button>
                                                    <button type="submit" class="px-4 py-2 bg-rose-600 text-white rounded-lg text-sm hover:bg-rose-700">Confirm Reject</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>

                                </div>
                            </td>
                        </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="p-12 text-center text-slate-400">
                                <i class="fas fa-inbox text-4xl mb-3 block opacity-20"></i>
                                No pending courses to review.
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

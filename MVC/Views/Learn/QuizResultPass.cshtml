@model dynamic
@{
    ViewData["Title"] = "Quiz Passed";
    // Nhận dữ liệu từ Controller (qua ViewBag hoặc Model)
    double score = ViewBag.Score ?? 0;
    string courseId = ViewBag.CourseId?.ToString() ?? "";
}

<div class="min-h-screen bg-gradient-to-br from-cyan-50 to-white flex items-center justify-center px-6">
    <div class="max-w-2xl w-full bg-white rounded-3xl shadow-xl p-10 text-center">

        <div class="mx-auto w-20 h-20 rounded-full bg-cyan-100 flex items-center justify-center mb-6 animate-bounce">
            <i class="fas fa-check text-4xl text-cyan-600"></i>
        </div>

        <h1 class="text-3xl font-bold text-slate-900 mb-2">
            Congratulations 🎉
        </h1>

        <p class="text-slate-600 mb-6">
            You’ve successfully passed the quiz! Keep up the great work.
        </p>

        <div class="grid grid-cols-3 gap-4 mb-8">
            <div class="bg-slate-50 rounded-xl p-4">
                <p class="text-sm text-slate-500">Score</p>
                <p class="text-xl font-bold text-cyan-700">@score.ToString("0")%</p>
            </div>
            <div class="bg-slate-50 rounded-xl p-4">
                <p class="text-sm text-slate-500">Result</p>
                <p class="text-xl font-bold text-emerald-600">Passed</p>
            </div>
            <div class="bg-slate-50 rounded-xl p-4">
                <p class="text-sm text-slate-500">Next Step</p>
                <p class="text-xl font-bold text-slate-700">Continue</p>
            </div>
        </div>

        <div class="flex gap-4 justify-center">
            <a href="/Learn/Index/@courseId"
               class="px-6 py-3 rounded-xl bg-cyan-600 text-white font-medium hover:bg-cyan-700 shadow-lg hover:shadow-cyan-200 transition-all">
                Continue Learning <i class="fas fa-arrow-right ml-2"></i>
            </a>

            <a href="/Enrollment/MyCourses"
               class="px-6 py-3 rounded-xl border border-slate-200 hover:bg-slate-50 transition-colors">
                Back to Dashboard
            </a>
        </div>
    </div>
</div>
<div x-data="{
     show: false,
     message: '' ,
     type: 'success' ,
     init() {
     @if (TempData["Success"] != null) {  <text> this.trigger('@TempData["Success"]', 'success' );</text>
            }
     @if (TempData["Error"] != null) {  <text> this.trigger('@TempData["Error"]', 'error' );</text>
            }
     },
     trigger(msg, t) {
     this.message=msg;
     this.type=t;
     this.show=true;
     setTimeout(()=>
    this.show = false, 3000);
    }
    }"
    @notify.window="trigger($event.detail.message, $event.detail.type)"
    x-show="show"
    x-transition:enter="transition ease-out duration-300"
    x-transition:enter-start="opacity-0 translate-y-2"
    x-transition:enter-end="opacity-100 translate-y-0"
    x-transition:leave="transition ease-in duration-300"
    x-transition:leave-start="opacity-100 translate-y-0"
    x-transition:leave-end="opacity-0 translate-y-2"
    class="fixed bottom-5 right-5 z-50 flex items-center gap-3 px-4 py-3 rounded-lg shadow-lg text-white min-w-[300px]"
    :class="type === 'success' ? 'bg-emerald-600' : 'bg-rose-600'"
    style="display: none;" x-cloak>

    <i class="fas text-lg" :class="type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle'"></i>

    <div class="flex-1">
        <h4 class="font-bold text-sm" x-text="type === 'success' ? 'Success' : 'Error'"></h4>
        <p class="text-sm opacity-90" x-text="message"></p>
    </div>

    <button @click="show = false" class="text-white/80 hover:text-white">
        <i class="fas fa-times"></i>
    </button>
</div>
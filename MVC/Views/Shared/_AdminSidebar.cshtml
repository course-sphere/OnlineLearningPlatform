<aside class="flex flex-col z-20 h-screen bg-white border-r border-gray-200 transition-all duration-300 ease-in-out"
       :class="sidebarOpen ? 'w-64' : 'w-20'"
       x-cloak>

    <div class="flex items-center justify-center h-16 border-b border-gray-200 bg-white">
        <div class="flex items-center gap-2 font-bold text-xl text-primary-600">
            <i class="fas fa-graduation-cap text-2xl"></i>
            <span x-show="sidebarOpen" class="transition-opacity duration-300">LMS Admin</span>
        </div>
    </div>

    <div class="flex-1 overflow-y-auto py-4">
        <ul class="space-y-2 px-3">
            @{
                string GetActiveClass(string path) => Context.Request.Path.ToString().StartsWith(path)
                    ? "bg-primary-50 text-primary-600"
                    : "text-gray-700 hover:bg-gray-100";
            }

            <li>
                <a href="/Admin" class="flex items-center p-3 rounded-lg group transition-colors @GetActiveClass("/Admin")">
                    <i class="fas fa-home w-6 text-center text-lg"></i>
                    <span x-show="sidebarOpen" class="ml-3 font-medium whitespace-nowrap">Dashboard</span>
                </a>
            </li>

            <li>
                <a href="/Admin/Users" class="flex items-center p-3 rounded-lg group transition-colors @GetActiveClass("/Admin/Users")">
                    <i class="fas fa-users w-6 text-center text-lg"></i>
                    <span x-show="sidebarOpen" class="ml-3 font-medium whitespace-nowrap">Users</span>
                </a>
            </li>

            <li>
                <a href="/Admin/Payments" class="flex items-center p-3 rounded-lg group transition-colors @GetActiveClass("/Admin/Payments")">
                    <i class="fas fa-credit-card w-6 text-center text-lg"></i>
                    <span x-show="sidebarOpen" class="ml-3 font-medium whitespace-nowrap">Payments</span>
                </a>
            </li>

            <li>
                <a href="/Admin/Reports" class="flex items-center p-3 rounded-lg group transition-colors @GetActiveClass("/Admin/Reports")">
                    <i class="fas fa-chart-line w-6 text-center text-lg"></i>
                    <span x-show="sidebarOpen" class="ml-3 font-medium whitespace-nowrap">Reports</span>
                </a>
            </li>

            <li>
                <a href="/Admin/CourseStatistics" class="flex items-center p-3 rounded-lg group transition-colors @GetActiveClass("/Admin/CourseStatistics")">
                    <i class="fas fa-chart-bar w-6 text-center text-lg"></i>
                    <span x-show="sidebarOpen" class="ml-3 font-medium whitespace-nowrap">Course Stats</span>
                </a>
            </li>
        </ul>
    </div>

    <div class="border-t border-gray-200 p-4">
        <a href="/Account/Logout" class="flex items-center p-3 text-red-600 hover:bg-red-50 rounded-lg transition-colors">
            <i class="fas fa-sign-out-alt w-6 text-center text-lg"></i>
            <span x-show="sidebarOpen" class="ml-3 font-medium font-bold">Logout</span>
        </a>
    </div>
</aside>
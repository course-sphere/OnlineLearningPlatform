@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="flex flex-col items-center justify-center min-h-[60vh] text-center p-6">
    <div class="w-16 h-16 bg-red-100 text-red-600 rounded-full flex items-center justify-center mb-4 text-3xl">
        <i class="fas fa-exclamation-triangle"></i>
    </div>

    <h1 class="text-3xl font-bold text-gray-900 mb-2">Oops! Something went wrong.</h1>
    <h2 class="text-lg text-gray-600 mb-6">An error occurred while processing your request.</h2>

    @if (Model.ShowRequestId)
    {
    <div class="p-4 bg-gray-100 rounded-lg border border-gray-200 mb-6 font-mono text-sm text-gray-700">
        <strong>Request ID:</strong> <span class="text-red-600">@Model.RequestId</span>
    </div>
    }

    <div class="max-w-2xl text-left bg-yellow-50 border border-yellow-200 rounded-lg p-4">
        <h3 class="text-yellow-800 font-bold mb-2 flex items-center gap-2">
            <i class="fas fa-bug"></i> Development Mode
        </h3>
        <p class="text-sm text-yellow-700 mb-2">
            Swapping to <strong>Development</strong> environment will display more detailed information about the error that occurred.
        </p>
        <p class="text-sm text-yellow-700">
            <strong>The Development environment shouldn't be enabled for deployed applications.</strong>
            It can result in displaying sensitive information from exceptions to end users.
        </p>
    </div>

    <a href="/" class="mt-8 px-6 py-2.5 bg-primary-600 text-white font-medium rounded-lg hover:bg-primary-700 transition-colors shadow-lg shadow-primary-500/30">
        Back to Home
    </a>
</div>
            <div class="mt-3 space-y-1">
                <a asp-controller="Auth" asp-action="Logout" class="block px-4 py-2 text-base font-medium text-red-600 hover:text-red-800 hover:bg-gray-50">Sign out</a>
            </div>
            }
            else
            {
            <div class="mt-3 space-y-1 px-4">
                <a asp-controller="Auth" asp-action="Login" class="block w-full text-center px-4 py-2 border border-gray-300 shadow-sm text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">Log in</a>
                <a asp-controller="Auth" asp-action="Register" class="block w-full text-center px-4 py-2 mt-2 border border-transparent shadow-sm text-base font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700">Sign up</a>
            </div>
            }
        </div>
    </div>

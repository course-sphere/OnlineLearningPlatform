            <a asp-controller="Home" asp-action="Index" class="block pl-3 pr-4 py-2 border-l-4 border-transparent text-base font-medium text-gray-600 hover:bg-gray-50 hover:border-gray-300 hover:text-gray-800">Home</a>
            <a asp-controller="Course" asp-action="Index" class="block pl-3 pr-4 py-2 border-l-4 border-transparent text-base font-medium text-gray-600 hover:bg-gray-50 hover:border-gray-300 hover:text-gray-800">Courses</a>
            <a asp-controller="Course" asp-action="CreateNewCourse" class="block pl-3 pr-4 py-2 border-l-4 border-transparent text-base font-medium text-primary-600 hover:bg-gray-50 hover:border-primary-300 hover:text-primary-800">Teach on Sphere</a>
        </div>

        <div class="pt-4 pb-4 border-t border-gray-200">
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
            <div class="flex items-center px-4">
                <div class="flex-shrink-0">
                    <div class="h-10 w-10 rounded-full bg-primary-100 flex items-center justify-center text-primary-700 font-bold border border-primary-200">
                        @(User.Identity.Name?.Substring(0, 1).ToUpper() ?? "U")
                    </div>
                </div>
                <div class="ml-3">
                    <div class="text-base font-medium text-gray-800">@User.Identity.Name</div>

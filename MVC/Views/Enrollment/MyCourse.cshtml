@model List<Domain.Entities.Enrollment>
    @{
    ViewData["Title"] = "My Learning";
    }

    <div class="container mx-auto px-4 py-8 min-h-screen">
        <h1 class="text-3xl font-bold mb-8">My Learning</h1>

        @if (Model == null || !Model.Any())
    {
        <div class="text-center py-12 bg-white rounded-xl border border-dashed border-gray-300">
            <div class="text-gray-400 mb-4 text-6xl">📚</div>
            <h3 class="text-xl font-medium text-gray-900">No courses yet</h3>
            <p class="text-gray-500 mb-6">Start your learning journey today!</p>
            <a href="/Course/Index" class="inline-block px-6 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700">Browse Courses</a>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var item in Model)
            {
            <div class="bg-white border rounded-xl overflow-hidden shadow-sm hover:shadow-md transition">
                <div class="relative h-40">
                    <img src="@(item.Course?.Image ?? "https://placehold.co/600x400")" class="w-full h-full object-cover" />
                    <div class="absolute inset-0 bg-black/10"></div>
                </div>
                <div class="p-5">
                    <h3 class="font-bold text-lg mb-2 line-clamp-2">@item.Course?.Title</h3>

                    <div class="mt-4 mb-4">
                        <div class="flex justify-between text-xs font-medium text-gray-500 mb-1">
                            <span>@item.ProgressPercent% Complete</span>
                        </div>
                        <div class="w-full bg-gray-200 rounded-full h-2">
                            <div class="bg-green-500 h-2 rounded-full" style="width: @item.ProgressPercent%"></div>
                        </div>
                    </div>

                    <a href="@Url.Action("Index", "Learn", new { id = item.CourseId })"
                       class="block w-full text-center py-2 bg-slate-900 text-white rounded-lg text-sm font-medium hover:bg-slate-800 transition">
                        @(item.ProgressPercent > 0 ? "Continue Learning" : "Start Learning")
                    </a>
                </div>
            </div>
            }
        </div>
    }
    </div>

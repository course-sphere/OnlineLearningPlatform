@model Domain.Requests.Lesson.CreateNewLessonForModuleRequest

@{
    ViewData["Title"] = "Create New Lesson";
}

<h2 class="mb-4">Create New Lesson</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="CreateNewLesson" method="post">
    <input type="hidden" asp-for="ModuleId" />

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" placeholder="Lesson title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Content" class="form-label"></label>
        <textarea asp-for="Content" class="form-control" rows="4"
                  placeholder="Lesson content (optional)"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="OrderIndex" class="form-label"></label>
        <input asp-for="OrderIndex" class="form-control" type="number" min="1" />
    </div>

    <button type="submit" class="btn btn-primary">
        Create Lesson
    </button>

    <a asp-action="Index"
       asp-controller="Course"
       asp-route-id="@Model.ModuleId"
       class="btn btn-secondary ms-2">
        Cancel
    </a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

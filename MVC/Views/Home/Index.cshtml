@* index.cshtml *@
@{
    ViewData["Title"] = "Home";
}

<!-- HERO SECTION -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <h1 class="hero-title">
                    Learn without limits
                </h1>
                <p class="hero-subtitle mb-4">
                    Build skills with online courses, certificates, and degrees from top instructors and universities worldwide.
                </p>
                <div class="d-flex gap-3 flex-wrap">
                    <a asp-controller="Auth" asp-action="Register" class="btn btn-primary btn-lg">
                        <i class="bi bi-rocket-takeoff me-2"></i>
                        Join for Free
                    </a>
                    <a href="#courses" class="btn btn-outline-secondary btn-lg">
                        <i class="bi bi-collection me-2"></i>
                        Browse Courses
                    </a>
                </div>
                <div class="mt-4 d-flex gap-4 text-secondary">
                    <div>
                        <strong class="fs-4 d-block text-primary">10,000+</strong>
                        <small>Students</small>
                    </div>
                    <div>
                        <strong class="fs-4 d-block text-primary">500+</strong>
                        <small>Courses</small>
                    </div>
                    <div>
                        <strong class="fs-4 d-block text-primary">100+</strong>
                        <small>Instructors</small>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <img src="https://cdn-icons-png.flaticon.com/512/3135/3135755.png"
                     class="img-fluid"
                     style="max-height: 450px; filter: drop-shadow(0 20px 40px rgba(0,0,0,0.1));"
                     alt="Learning illustration">
            </div>
        </div>
    </div>
</section>

<!-- TRUSTED BY -->
<section class="py-5 bg-white border-bottom">
    <div class="container">
        <p class="text-center text-muted mb-4">Trusted by learners from leading companies</p>
        <div class="d-flex justify-content-center align-items-center gap-5 flex-wrap">
            <span class="fw-semibold text-secondary fs-5">Google</span>
            <span class="fw-semibold text-secondary fs-5">Meta</span>
            <span class="fw-semibold text-secondary fs-5">IBM</span>
            <span class="fw-semibold text-secondary fs-5">Microsoft</span>
            <span class="fw-semibold text-secondary fs-5">Amazon</span>
        </div>
    </div>
</section>

<!-- POPULAR COURSES -->
<section id="courses" class="py-5">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="section-title mb-1">Popular Courses</h2>
                <p class="text-muted">Explore our most popular courses</p>
            </div>
            <a class="btn btn-outline-secondary">
                View all
                <i class="bi bi-arrow-right ms-2"></i>
            </a>
        </div>

        <div class="row g-4">
            <!-- Course Card 1 -->
            <div class="col-lg-3 col-md-6">
                <div class="course-card">
                    <img src="https://images.unsplash.com/photo-1498050108023-c5249f4df085?w=400&h=250&fit=crop"
                         class="course-card-img"
                         alt="Web Development">
                    <div class="course-card-body">
                        <div class="d-flex gap-2 mb-2">
                            <span class="badge badge-primary">Web Development</span>
                            <span class="badge badge-success">Beginner</span>
                        </div>
                        <h6 class="course-title">Complete Web Development Bootcamp</h6>
                        <p class="course-instructor">by John Smith</p>
                        <div class="course-meta">
                            <span class="course-rating">
                                <i class="bi bi-star-fill"></i>
                                4.8
                            </span>
                            <span>
                                <i class="bi bi-people-fill"></i>
                                12,500
                            </span>
                            <span>
                                <i class="bi bi-clock-fill"></i>
                                42h
                            </span>
                        </div>
                        <div class="course-price">$89</div>

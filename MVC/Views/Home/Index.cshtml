@{
    ViewData["Title"] = "Home";
}

<section class="relative overflow-hidden bg-white py-20 lg:py-32">
    <div class="container mx-auto px-4 md:px-6 lg:px-8 max-w-7xl">
        <div class="grid gap-12 lg:grid-cols-2 lg:gap-8 items-center">

            <div class="max-w-2xl">
                <div class="inline-flex items-center rounded-full border border-primary-200 bg-primary-50 px-3 py-1 text-sm font-medium text-primary-800 mb-6">
                    <span class="flex h-2 w-2 rounded-full bg-primary-600 mr-2"></span>
                    New courses available now
                </div>

                <h1 class="text-4xl font-extrabold tracking-tight text-slate-900 sm:text-5xl md:text-6xl mb-6">
                    Learn without <span class="text-primary-600">limits</span>

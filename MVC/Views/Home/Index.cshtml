                        <div class="course-meta">
                            <span class="course-rating">
                                <i class="bi bi-star-fill"></i>
                                4.9
                            </span>
                            <span>
                                <i class="bi bi-people-fill"></i>
                                8,340
                            </span>
                            <span>
                                <i class="bi bi-clock-fill"></i>
                                35h
                            </span>
                        </div>
                        <div class="course-price">$99</div>
                    </div>
                </div>
            </div>

            <!-- Course Card 3 -->
            <div class="col-lg-3 col-md-6">
                <div class="course-card">
                    <img src="https://images.unsplash.com/photo-1561070791-2526d30994b5?w=400&h=250&fit=crop"
                         class="course-card-img"
                         alt="UI/UX Design">
                    <div class="course-card-body">
                        <div class="d-flex gap-2 mb-2">
                            <span class="badge badge-primary">Design</span>
                            <span class="badge badge-success">Beginner</span>
                        </div>
                        <h6 class="course-title">UI/UX Design Masterclass</h6>
                        <p class="course-instructor">by Emily Chen</p>
                        <div class="course-meta">
                            <span class="course-rating">
                                <i class="bi bi-star-fill"></i>
                                4.7
                            </span>
                            <span>
                                <i class="bi bi-people-fill"></i>
                                6,890
                            </span>
                            <span>
                                <i class="bi bi-clock-fill"></i>
                                28h
                            </span>
                        </div>
                        <div class="course-price">$79</div>
                    </div>
                </div>
            </div>

            <!-- Course Card 4 -->
            <div class="col-lg-3 col-md-6">
                <div class="course-card">
                    <img src="https://images.unsplash.com/photo-1451187580459-43490279c0fa?w=400&h=250&fit=crop"
                         class="course-card-img"
                         alt="Digital Marketing">
                    <div class="course-card-body">
                        <div class="d-flex gap-2 mb-2">
                            <span class="badge badge-primary">Marketing</span>
                            <span class="badge badge-success">Beginner</span>
                        </div>
                        <h6 class="course-title">Digital Marketing Fundamentals</h6>
                        <p class="course-instructor">by Michael Brown</p>
                        <div class="course-meta">
                            <span class="course-rating">
                                <i class="bi bi-star-fill"></i>
                                4.6
                            </span>
                            <span>
                                <i class="bi bi-people-fill"></i>
                                9,230
                            </span>
                            <span>
                                <i class="bi bi-clock-fill"></i>
                                25h
                            </span>
                        </div>
                        <div class="course-price">$69</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

